{
    "scripts": {
        "install": "cd spam-detector-web && npm install",
        "dev-web": "cd spam-detector-web && npm run watch",
        "build-web": "cd spam-detector-web && npm run build",
        "dev-api": "fastapi dev app.py",
        "serve-api": "fastapi run app.py",
        "dev": "npm-run-all --parallel dev-web dev-api",
        "serve": "npm-run-all --parallel build-web serve-api",
        "tele": "python tele.py"
    },
    "devDependencies": {
        "npm-run-all": "^4.1.5"
    }
}
