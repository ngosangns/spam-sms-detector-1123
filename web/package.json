{
  "scripts": {
    "build": "concurrently \"rspack\" \"yarn build-css\"",
    "watch": "rspack --watch",
    "dev": "concurrently \"yarn watch\" \"yarn dev-css\"",
    "build-css": "postcss src/styles.css -o dist/styles.css -m --verbose",
    "dev-css": "postcss src/styles.css -o dist/styles.css -m -w --verbose"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@rspack/cli": "^1.0.14",
    "@rspack/core": "^1.0.14",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^9.2.1",
    "concurrently": "^9.0.1",
    "html-webpack-plugin": "^5.6.3",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "postcss-loader": "^8.1.1",
    "tailwindcss": "^3.4.14"
  }
}
